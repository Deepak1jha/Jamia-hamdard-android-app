<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbarSize="0dp"
    android:scrollbars="none"
    tools:context="com.example.deepakjha.jamia_hamdard_app.HomeScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="653dp"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            tools:context="com.example.deepakjha.jamia_hamdard_app.HomeScreen">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dip"
                android:background="@android:color/transparent" />


            <Button
                android:id="@+id/button3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/addmission" />

            <Button
                android:id="@+id/button2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignBaseline="@+id/button7"
                android:layout_alignBottom="@+id/button7"
                android:layout_alignParentStart="true"
                android:background="@drawable/result" />

            <Button
                android:id="@+id/button5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/news"
                android:shadowColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/button7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="11dp"
                android:background="@drawable/coursess" />

            <Button
                android:id="@+id/button6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/view1"
                android:background="@drawable/placements" />

            <Button
                android:id="@+id/button10"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignBaseline="@+id/button6"
                android:layout_alignBottom="@+id/button6"
                android:layout_alignParentEnd="true"
                android:background="@drawable/media" />

            <Button
                android:id="@+id/button11"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignBaseline="@+id/button26"
                android:layout_alignBottom="@+id/button26"
                android:layout_alignParentEnd="true"
                android:background="@drawable/abouut" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/view1"
                android:layout_below="@+id/button3"
                android:text="ADMISSION"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/button5"
                android:layout_marginEnd="12dp"
                android:text="NEWS/EVENTS"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/view1"
                android:layout_below="@+id/button2"
                android:layout_marginStart="7dp"
                android:text="RESULTS"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view1"
                android:layout_below="@+id/button7"
                android:layout_marginEnd="13dp"
                android:text="COURSES"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView15"
                android:layout_below="@+id/button10"
                android:text="MEDIA"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/button11"
                android:text="ABOUT US"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignStart="@+id/view1"
                android:text="PLACEMENT"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView10"
                android:layout_alignParentBottom="true"
                android:text="EXTRA"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Button
                android:id="@+id/button26"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_above="@+id/textView14"
                android:layout_alignParentStart="true"
                android:background="@drawable/gotoextra" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
